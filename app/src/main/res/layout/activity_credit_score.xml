                                <TextView
                                    style="@style/txt_33_12"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="14dp"
                                    android:text="是否上黑名单" />

                                <TextView
                                    style="@style/txt_33_12"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="40dp"
                                    android:text="是否上黑名单" />

                                <TextView
                                    style="@style/txt_99_12"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="14dp"
                                    android:layout_marginEnd="15dp"
                                    android:text="待获取" />

                                <TextView
                                    style="@style/txt_99_12"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="40dp"
                                    android:layout_marginEnd="15dp"
                                    android:text="待获取" />
                            </RelativeLayout>
