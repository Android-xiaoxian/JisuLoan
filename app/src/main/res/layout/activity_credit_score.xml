<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_public_title_black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_F4F4F4"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@mipmap/pic_xyf"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp">

                        <TextView
                            android:id="@+id/tv_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="641"
                            android:textColor="#FEFEFE"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/tv_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/tv_score"
                            android:layout_toRightOf="@id/tv_score"
                            android:text="良好"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="22dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/shape_014"
                            android:gravity="center"
                            android:text="信用提升"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <TextView
                        style="@style/txt_w_12"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/str6" />

                    <TextView
                        style="@style/txt_w_12"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="25dp"
                        android:drawableRight="@mipmap/icon_xy_3"
                        android:drawablePadding="3dp"
                        android:text="@string/str7" />
                </LinearLayout>

                <com.zxy.jisuloan.view.widget.RoundShadowLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:radius="6dp"
                    app:shadowColor="@color/color_1a"
                    app:shadowRadius="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="185dp"
                        android:background="@drawable/shape_003">

                        <TextView
                            style="@style/txt_66_14"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="23dp"
                            android:text="信用报告"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/txt_66_12"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="60dp"
                            android:layout_marginEnd="19dp"
                            android:lineSpacingExtra="3dp"
                            android:text="@string/str8" />

                        <TextView
                            style="@style/txt_r_20"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="115dp"
                            android:text="65.52%" />

                        <TextView
                            style="@style/txt_r_20"
                            android:layout_marginStart="113dp"
                            android:layout_marginTop="115dp"
                            android:text="4" />

                        <TextView
                            style="@style/txt_r_20"
                            android:layout_marginStart="189dp"
                            android:layout_marginTop="115dp"
                            android:text="65.52%" />

                        <TextView
                            style="@style/txt_66_11"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="143dp"
                            android:lineSpacingExtra="3dp"
                            android:text="同城联系人\n占比" />

                        <TextView
                            style="@style/txt_66_11"
                            android:layout_marginStart="114dp"
                            android:layout_marginTop="143dp"
                            android:lineSpacingExtra="3dp"
                            android:text="互通联系人\n通话人数" />

                        <TextView
                            style="@style/txt_66_11"
                            android:layout_marginStart="188dp"
                            android:layout_marginTop="143dp"
                            android:lineSpacingExtra="3dp"
                            android:text="互通联系人\n通话次数" />
                    </RelativeLayout>
                </com.zxy.jisuloan.view.widget.RoundShadowLayout>


                <com.zxy.jisuloan.view.widget.RoundShadowLayout
