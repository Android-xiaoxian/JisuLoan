                                android:layout_marginStart="15dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="16dp">

                                <TextView
                                    style="@style/txt_33_14"
                                    android:layout_centerVertical="true"
                                    android:text="通话风险报告"
                                    android:textStyle="bold" />

                                <Button
                                    android:layout_width="66dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/shape_015"
                                    android:text="查看报告"
                                    android:textColor="@color/mainColor"
                                    android:textSize="12sp" />
                            </RelativeLayout>

                            <TextView
                                style="@style/txt_99_12"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="9dp"
                                android:layout_marginEnd="15dp"
                                android:background="@drawable/shape_016"
                                android:lineSpacingExtra="3dp"
                                android:padding="14dp"
                                android:text="@string/str9" />
                        </LinearLayout>

                        <include layout="@layout/view_line_002" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="164dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="16dp">

                                <TextView
                                    style="@style/txt_33_14"
                                    android:layout_centerVertical="true"
                                    android:text="多头借贷报告"
                                    android:textStyle="bold" />

                                <Button
                                    android:layout_width="66dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/shape_015"
                                    android:text="查看报告"
                                    android:textColor="@color/mainColor"
                                    android:textSize="12sp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="95dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="9dp"
                                android:layout_marginEnd="15dp"
                                android:background="@drawable/shape_012">

                                <TextView
                                    style="@style/txt_33_12"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="14dp"
                                    android:text="3个月内借款次数" />

                                <TextView
                                    style="@style/txt_33_12"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="40dp"
                                    android:text="1个月内申请借款次数" />

                                <TextView
                                    style="@style/txt_33_12"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="68dp"
                                    android:text="共债订单数" />

                                <TextView
                                    style="@style/txt_99_12"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="14dp"
                                    android:layout_marginEnd="15dp"
                                    android:text="待获取" />

                                <TextView
                                    style="@style/txt_99_12"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="40dp"
                                    android:layout_marginEnd="15dp"
                                    android:text="待获取" />

                                <TextView
                                    style="@style/txt_99_12"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="68dp"
                                    android:layout_marginEnd="15dp"
                                    android:text="待获取" />
                            </RelativeLayout>
                        </LinearLayout>

                        <include layout="@layout/view_line_002" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="189dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="16dp">

                                <TextView
                                    style="@style/txt_33_14"
                                    android:layout_centerVertical="true"
                                    android:text="联系人检测报告"
                                    android:textStyle="bold" />

                                <Button
                                    android:layout_width="66dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/shape_015"
                                    android:text="去检测"
                                    android:textColor="@color/mainColor"
                                    android:textSize="12sp" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="315dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="9dp"
                                android:background="@drawable/shape_016"
                                android:divider="@drawable/line_fengexian"
                                android:orientation="vertical"
                                android:showDividers="middle">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp">

                                    <TextView
                                        android:id="@+id/tv_name_1"
                                        style="@style/txt_33_12"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="15dp"
                                        android:text="张三丰" />

                                    <TextView
                                        style="@style/txt_33_12"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_toEndOf="@id/tv_name_1"
                                        android:text="不合格"
                                        android:textColor="@color/color_red_txt" />

                                    <TextView
                                        style="@style/txt_33_12"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginEnd="15dp"
                                        android:text="命中黑名单"
                                        android:textColor="@color/color_red_txt" />

                                    <TextView
                                        android:id="@+id/tv_phone_1"
                                        style="@style/txt_99_12"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="35dp"
                                        android:text="150****2779" />

                                    <TextView
                                        style="@style/txt_33_12"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginTop="35dp"
                                        android:layout_marginEnd="15dp"
                                        android:text="很少联系"
                                        android:textColor="@color/color_red_txt" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp">

                                    <TextView
                                        android:id="@+id/tv_name_2"
                                        style="@style/txt_33_12"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="15dp"
                                        android:text="张三丰" />

                                    <TextView
                                        style="@style/txt_33_12"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_toEndOf="@id/tv_name_2"
                                        android:text="不合格"
                                        android:textColor="@color/color_red_txt" />

                                    <TextView
                                        style="@style/txt_99_12"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginEnd="15dp"
                                        android:text="未命中黑名单" />

                                    <TextView
                                        android:id="@+id/tv_phone_2"
                                        style="@style/txt_99_12"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="35dp"
                                        android:text="150****2779" />

                                    <TextView
                                        style="@style/txt_99_12"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginTop="35dp"
                                        android:layout_marginEnd="15dp"
                                        android:text="偶尔联系" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.zxy.jisuloan.view.widget.RoundShadowLayout>

                <Button
                    android:layout_width="245dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/shape_004"
                    android:text="开通会员，免费获取所有报告"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>