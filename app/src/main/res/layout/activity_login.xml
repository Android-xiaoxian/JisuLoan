<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/pic_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_login_back"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="13dp"
                android:focusableInTouchMode="false"
                android:onClick="onClick"
                android:src="@mipmap/icon_fh" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/txt_login_code"
                    style="@style/login_text1"
                    android:text="验证码登录/注册" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/txt_login_pwd"
                    style="@style/login_text2"
                    android:layout_marginStart="60dp"
                    android:text="密码登录" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_login"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/shape_003" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
