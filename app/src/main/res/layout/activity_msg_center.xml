<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_F4F4F4"
    android:orientation="vertical">

    <include layout="@layout/include_public_title_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <CheckedTextView
            android:textStyle="bold"
            android:id="@+id/txt_msg_all"
            style="@style/common_TextView_3"
            android:background="@drawable/selector_checktv"
            android:text="全部消息" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <CheckedTextView
            android:textStyle="bold"
            android:id="@+id/txt_msg_system"
            style="@style/common_TextView_3"
            android:background="@drawable/selector_checktv"
            android:checked="true"
            android:text="系统消息" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <CheckedTextView
            android:textStyle="bold"
            android:id="@+id/txt_msg_activity"
            style="@style/common_TextView_3"
            android:background="@drawable/selector_checktv"
            android:text="活动中心" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/transparent"
        android:dividerHeight="15dp"
        android:padding="15dp" />
</LinearLayout>