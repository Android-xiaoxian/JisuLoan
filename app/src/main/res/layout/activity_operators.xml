<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_F4F4F4"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_auth_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@drawable/line_fengexian"
            android:orientation="vertical"
            android:padding="15dp"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="姓名"
                    android:textColor="@color/text_33"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/name"
                    style="@style/editText_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入姓名"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/text_66"
                    android:textColorHint="@color/text_99"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="身份证号"
                    android:textColor="@color/text_33"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/id_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入身份证号"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/text_66"
                    android:textColorHint="@color/text_99"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="手机号"
                    android:textColor="@color/text_33"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingEnd="15dp"
                    android:text=""
                    android:textColor="@color/text_66"
                    android:textColorHint="@color/text_99"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="运营商服务密码"
                    android:textColor="@color/text_33"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="请输入运营商服务密码"
                    android:inputType="numberPassword"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/text_66"
                    android:textColorHint="@color/text_99"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_code"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="短信验证码"
                    android:textColor="@color/text_66"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入短信验证码"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/text_66"
                    android:textColorHint="@color/text_99"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>


        <CheckedTextView
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:padding="10dp"
            android:checked="false"
            android:drawableLeft="@drawable/selector_cb"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:onClick="OnClick"
            android:text="是否携号转网用户"
            android:textColor="@color/text_66"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/selector_cb"
                android:drawablePadding="8dp"
                android:text="中国移动"
                android:textColor="@color/text_33"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/selector_cb"
                android:drawablePadding="8dp"
                android:text="中国电信"
                android:textColor="@color/text_33"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/selector_cb"
                android:drawablePadding="8dp"
                android:text="中国联通"
                android:textColor="@color/text_33"
                android:textSize="14sp" />

        </RadioGroup>

        <include layout="@layout/include_auth_bottom" />
    </LinearLayout>
</ScrollView>