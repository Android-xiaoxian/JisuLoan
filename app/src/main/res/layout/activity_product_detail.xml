<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tool:context=".activity.ProductDetailActivity">


    <include layout="@layout/include_public_title_black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_F4F4F4"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <com.zxy.jisuloan.view.widget.RoundShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:radius="6dp"
                    app:shadowColor="@color/color_1a"
                    app:shadowRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_003"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/tv_1"
                            style="@style/common_TextView_2"
                            android:text="申请条件"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_condition"
                            style="@style/common_TextView2_3"
                            android:layout_marginTop="30dp"
                            android:lineSpacingExtra="5dp"
                            android:text="" />
                    </LinearLayout>
                </com.zxy.jisuloan.view.widget.RoundShadowLayout>


                <com.zxy.jisuloan.view.widget.RoundShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:radius="6dp"
                    app:shadowColor="@color/color_1a"
                    app:shadowRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_003"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/tv_2"
                            style="@style/common_TextView_2"
                            android:text="所需材料"
                            android:textStyle="bold" />

                        <TextView

                            android:id="@+id/tv_samples"
                            style="@style/common_TextView2_3"
                            android:layout_marginTop="30dp"
                            android:lineSpacingExtra="5dp"
                            android:text="" />
                    </LinearLayout>
                </com.zxy.jisuloan.view.widget.RoundShadowLayout>

                <com.zxy.jisuloan.view.widget.RoundShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:radius="6dp"
                    app:shadowColor="@color/color_1a"
                    app:shadowRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_003"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/tv_3"
                            style="@style/common_TextView_2"
                            android:text="还款说明"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_instructions"
                            style="@style/common_TextView2_3"
                            android:layout_marginTop="30dp"
                            android:lineSpacingExtra="5dp"
                            android:text="" />
                    </LinearLayout>
                </com.zxy.jisuloan.view.widget.RoundShadowLayout>

                <com.zxy.jisuloan.view.widget.RoundShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:radius="6dp"
                    app:shadowColor="@color/color_1a"
                    app:shadowRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_003"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/tv_4"
                            style="@style/common_TextView_2"
                            android:text="机构信息"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_company_info"
                            style="@style/common_TextView2_3"
                            android:layout_marginTop="30dp"
                            android:lineSpacingExtra="5dp"
                            android:text="" />
                    </LinearLayout>
                </com.zxy.jisuloan.view.widget.RoundShadowLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>