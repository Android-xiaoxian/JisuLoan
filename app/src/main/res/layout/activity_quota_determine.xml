<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuotaDatermineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/include_public_title_black" />

        <ImageView
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginTop="82dp"
            android:src="@mipmap/pic_jz" />

        <TextView
            android:id="@+id/txt_quota_deter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="不要走开，额度计算中"
            android:textColor="@color/text_33"
            android:textSize="16sp" />


        <com.zxy.jisuloan.view.widget.RoundShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:radius="6dp"
            app:shadowColor="@color/color_1a"
            app:shadowRadius="5dp">

            <LinearLayout
                android:layout_width="305dp"
                android:layout_height="95dp"
                android:background="@drawable/shape_003"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="75dp"
                    android:src="@mipmap/yq_jd" />

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_quota_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@color/text_66"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_quota_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text=""
                        android:textColor="@color/text_66"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_quota_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_66"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </com.zxy.jisuloan.view.widget.RoundShadowLayout>

        <com.zxy.jisuloan.view.RoundedProgressBar
            android:id="@+id/rpb_quota_dater"
            android:layout_width="305dp"
            android:layout_height="5dp"
            android:layout_marginTop="27dp" />

        <TextView
            android:id="@+id/tv_quota_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="12sp"
            android:layout_marginEnd="35dp"
            android:text="37%"
            android:textColor="@color/text_66"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>