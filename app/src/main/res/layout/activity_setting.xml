<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_F4F4F4"
    android:orientation="vertical"
    tool:context=".activity.SettingActivity">

    <include layout="@layout/include_public_title_black" />

    <include layout="@layout/view_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_001"
            style="@style/common_TextView"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="消息推送" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:checked="true"
            android:thumb="@drawable/oval_002"
            android:track="@drawable/selector_switch"
            />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_close"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="关"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_open"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="开"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:divider="@drawable/line_fengexian"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:showDividers="middle">

        <RelativeLayout
            android:id="@+id/rl_changePassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/common_TextView"
                android:layout_centerVertical="true"
                android:text="密码修改" />

            <ImageView
                android:layout_width="4dp"
                android:layout_height="8dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_xy_2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_helpCenter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/common_TextView"
                android:layout_centerVertical="true"
                android:text="帮助中心" />

            <ImageView
                android:layout_width="4dp"
                android:layout_height="8dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_xy_2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_aboutUs"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/common_TextView"
                android:layout_centerVertical="true"
                android:text="关于我们" />

            <ImageView
                android:layout_width="4dp"
                android:layout_height="8dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_xy_2" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_LogOut"
        android:layout_width="245dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_004"
        android:text="退出登录"
        android:onClick="onClick"
        android:textColor="@color/white"
        android:textSize="13sp" />
</LinearLayout>