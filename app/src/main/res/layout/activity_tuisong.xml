<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_F4F4F4">

            <com.youth.banner.Banner
                android:layout_width="match_parent"
                android:layout_height="137dp"
                android:background="@mipmap/banner_pic"
                app:banner_default_image="@mipmap/banner_pic"
                app:image_scale_type="fit_center" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.zxy.jisuloan.view.widget.RoundShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="115dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    app:radius="6dp"
                    app:shadowColor="@color/color_1a"
                    app:shadowRadius="5dp">

                    <FrameLayout
                        android:id="@+id/fl_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/shape_003">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="173dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:layout_marginStart="18dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="55dp"
                                    android:src="@mipmap/znzs" />

                                <TextView
                                    style="@style/txt_66_14"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="13dp"
                                    android:layout_marginTop="5dp"
                                    android:text="为您精心挑选了一款产品，快来试试吧！" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginEnd="15dp">

                                <ImageView
                                    android:id="@+id/img_logo"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginTop="22dp"
                                    android:src="@mipmap/logo" />

                                <TextView
                                    android:id="@+id/tv_product_name"
                                    style="@style/common_TextView"
                                    android:layout_marginStart="38dp"
                                    android:layout_marginTop="21dp"
                                    android:text="小赢卡贷"
                                    android:textSize="14sp" />

                                <LinearLayout
                                    android:layout_width="93dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="128dp"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/common_TextView3"
                                        android:layout_marginTop="3dp"
                                        android:text="额度" />

                                    <TextView
                                        android:id="@+id/tv_quota"
                                        style="@style/common_TextView"
                                        android:layout_marginTop="2dp"
                                        android:text="1000-150000" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="93dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="226dp"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/common_TextView3"
                                        android:layout_marginTop="3dp"
                                        android:text="期限" />

                                    <TextView
                                        android:id="@+id/tv_term"
                                        style="@style/common_TextView"
                                        android:layout_marginTop="2dp"
                                        android:text="12-36个月" />
                                </LinearLayout>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tv_apply"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="立即申请"
                                android:textColor="@color/mainColor"
                                android:textSize="13sp" />
                        </LinearLayout>

                    </FrameLayout>
                </com.zxy.jisuloan.view.widget.RoundShadowLayout>

                <FrameLayout
                    android:id="@+id/fl_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="25dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ListView
                            android:id="@+id/lv_tuisong1"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:divider="@null"
                            android:dividerHeight="15dp"
                            android:overScrollMode="never"
                            android:scrollbars="none" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="50dp"
                                android:layout_height="1dp"
                                android:background="@color/mainColor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="为您推荐"
                                android:textColor="@color/mainColor"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="50dp"
                                android:layout_height="1dp"
                                android:background="@color/mainColor" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </RelativeLayout>

        </RelativeLayout>

        <include layout="@layout/include_recommend" />

        <include layout="@layout/include_bottom" />
    </LinearLayout>
</ScrollView>