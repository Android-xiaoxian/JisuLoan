<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:scaleType="center"
        android:src="@mipmap/gx_pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="67dp"
        android:gravity="right">

        <ImageView
            android:id="@+id/img_update_dialog_X"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="49dp"
            android:src="@mipmap/icon_qx" />
    </LinearLayout>

    <ScrollView
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:overScrollMode="never"
        android:padding="3dp"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/txt_update_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="13dp"
            android:text=""
            android:textColor="@color/text_66"
            android:textSize="13sp" />
    </ScrollView>

    <Button
        android:id="@+id/btn_update_dialog"
        android:layout_width="173dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="333dp"
        android:background="@drawable/shape_004"
        android:text="立即升级"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_update_dialog"
        android:layout_width="173dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="333dp"
        android:orientation="vertical"
        android:visibility="gone">

        <com.zxy.jisuloan.view.RoundedProgressBar
            android:id="@+id/rp_update_dialog"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9dp"
            android:text="升级中..."
            android:textColor="@color/text_33"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>