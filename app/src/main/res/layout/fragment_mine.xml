<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/img_msg"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="11dp"
                android:src="@mipmap/icon_xx" />

            <ImageView
                android:id="@+id/img_setting"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="42dp"
                android:src="@mipmap/icon_sz" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="51dp">

                <ImageView
                    android:id="@+id/img_touXiang"
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:src="@mipmap/tx" />

                <TextView
                    android:id="@+id/tv_login"
                    style="@style/common_TextView_2"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:gravity="center_vertical"
                    android:text="未登录" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/common_TextView_1"
                    android:text="0" />

                <TextView
                    style="@style/common_TextView_1"
                    android:layout_marginTop="5dp"
                    android:text="现金" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/common_TextView_1"
                    android:text="0" />

                <TextView
                    style="@style/common_TextView_1"
                    android:layout_marginTop="5dp"
                    android:text="免息券" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/common_TextView_1"
                    android:text="0" />

                <TextView
                    style="@style/common_TextView_1"
                    android:layout_marginTop="5dp"
                    android:text="拒就赔" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_credit_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/common_TextView_1"
                    android:text="0" />

                <TextView
                    style="@style/common_TextView_1"
                    android:layout_marginTop="5dp"
                    android:text="信用分" />
            </LinearLayout>
        </LinearLayout>


        <com.zxy.jisuloan.view.widget.RoundShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            app:radius="6dp"
            app:shadowColor="@color/color_1a"
            app:shadowRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_003"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/icon_ed" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/common_TextView"
                            android:text="预估额度" />

                        <TextView
                            style="@style/txt_66_11"
                            android:layout_marginTop="2dp"
                            android:drawableRight="@mipmap/icon_xy"
                            android:drawablePadding="3dp"
                            android:text="一键智能借款"
                            android:textColor="@color/mainColor" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/line_fengexian" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/icon_hg" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/common_TextView"
                            android:text="会员中心" />

                        <TextView
                            style="@style/txt_66_11"
                            android:layout_marginTop="2dp"
                            android:drawableRight="@mipmap/icon_xy"
                            android:drawablePadding="3dp"
                            android:text="尊享18项特权"
                            android:textColor="@color/mainColor" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.zxy.jisuloan.view.widget.RoundShadowLayout>


        <com.zxy.jisuloan.view.widget.RoundShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            app:radius="6dp"
            app:shadowColor="@color/color_1a"
            app:shadowRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@drawable/shape_003"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_browse_record"
                    style="@style/common_TextView2_4"
                    android:drawableTop="@mipmap/icon_lljl"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="浏览记录" />

                <TextView
                    android:id="@+id/tv_house"
                    style="@style/common_TextView2_4"
                    android:drawableTop="@mipmap/icon_sc"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="收藏" />

                <TextView
                    android:id="@+id/tv_order"
                    style="@style/common_TextView2_4"
                    android:drawableTop="@mipmap/icon_dd"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="订单" />

                <TextView
                    android:id="@+id/tv_repayment"
                    style="@style/common_TextView2_4"
                    android:drawableTop="@mipmap/icon_hk"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="还款" />
            </LinearLayout>
        </com.zxy.jisuloan.view.widget.RoundShadowLayout>

        <com.zxy.jisuloan.view.widget.RoundShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            app:radius="6dp"
            app:shadowColor="@color/color_1a"
            app:shadowRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@drawable/shape_003"
                android:orientation="vertical">

                <TextView
                    style="@style/common_TextView_2"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="必备工具"
                    android:textStyle="bold" />

                <include
                    layout="@layout/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="15dp" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:alignmentMode="alignBounds"
                    app:columnCount="4"
                    app:orientation="horizontal"
                    app:rowCount="2">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <TextView
                            style="@style/txt_66_14"
                            android:drawableTop="@mipmap/icon_hmdjc"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:text="黑名单" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <TextView
                            style="@style/txt_66_14"
                            android:drawableTop="@mipmap/icon_bb_bjfx"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:text="被拒分析" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <TextView
                            style="@style/txt_66_14"
                            android:drawableTop="@mipmap/icon_bb_dtjd"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:text="多头借贷" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <TextView
                            style="@style/txt_66_14"
                            android:drawableTop="@mipmap/icon_bb_jsq"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:text="计算器" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <TextView
                            style="@style/txt_66_14"
                            android:drawableTop="@mipmap/icon_bb_sjcz"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:text="手机充值" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <TextView
                            style="@style/txt_66_14"
                            android:drawableTop="@mipmap/icon_bb_zq"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:text="赚钱" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <TextView
                            style="@style/txt_66_14"
                            android:drawableTop="@mipmap/icon_bb_fkjy"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:text="反馈建议" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_evaluate"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <TextView
                            style="@style/txt_66_14"
                            android:drawableTop="@mipmap/faceback"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:text="评价" />
                    </LinearLayout>

                </androidx.gridlayout.widget.GridLayout>
            </LinearLayout>
        </com.zxy.jisuloan.view.widget.RoundShadowLayout>

        <com.zxy.jisuloan.view.widget.RoundShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:radius="6dp"
            app:shadowColor="@color/color_1a"
            app:shadowRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:background="@drawable/shape_003"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="55dp"
                        android:src="@mipmap/znzs" />

                    <TextView
                        style="@style/txt_66_14"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:text="@string/str68" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/shape_012"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="22dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_logo"
                            android:layout_width="18dp"
                            android:layout_height="18dp" />

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/common_TextView_2"
                            android:layout_marginStart="8dp"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/common_TextView3"
                            android:text="额度" />

                        <TextView
                            android:id="@+id/tv_quota"
                            style="@style/common_TextView_1"
                            android:layout_marginTop="5dp"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/common_TextView3"
                            android:text="期限" />

                        <TextView
                            android:id="@+id/tv_term"
                            style="@style/common_TextView_1"
                            android:layout_marginTop="5dp"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_apply_now"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="立即申请"
                    android:textColor="@color/mainColor"
                    android:textSize="13sp" />
            </LinearLayout>
        </com.zxy.jisuloan.view.widget.RoundShadowLayout>

        <include layout="@layout/include_bottom" />


    </LinearLayout>
</ScrollView>