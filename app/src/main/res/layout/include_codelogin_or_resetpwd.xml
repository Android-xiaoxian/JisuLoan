<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical">

    <TextView
        android:textStyle="bold"
        android:id="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:text="手机号"
        android:textColor="@color/text_33"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_login_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:background="@null"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:textColor="@color/text_33"
        android:textColorHint="@color/text_99"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@color/bg_F4F4F4" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/txt_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:text="验证码"
        android:textColor="@color/text_33"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_login_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="@color/text_33"
            android:textColorHint="@color/text_99"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/txt_login_getCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:minWidth="90dp"
            android:layout_marginStart="20dp"
            android:onClick="onClick"
            android:text="获取验证码"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@color/bg_F4F4F4" />

    <LinearLayout
        android:id="@+id/ll_xieyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ct_login_xieyi"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/selector_cb"
            android:button="@null"
            android:checked="true"
            android:onClick="onClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="我已阅读并同意"
            android:textColor="@color/text_99"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text=" 和 "
            android:textColor="@color/text_99"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私协议》"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login_code"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginStart="35dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/selector_btnbg_001"
        android:enabled="false"
        android:onClick="onClick"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>