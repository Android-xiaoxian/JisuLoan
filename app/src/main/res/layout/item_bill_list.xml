<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ing_logo"
            android:layout_width="18dp"
            android:layout_height="18dp" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/txt_33_14"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            style="@style/txt_99_12"
            android:text="@string/str70" />

        <TextView
            android:id="@+id/tv_money"
            style="@style/txt_r_16"
            android:layout_marginStart="5dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_repay"
        android:layout_width="66dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/shape_015"
        android:text="@string/str71"
        android:textColor="@color/mainColor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_repay_date"
        style="@style/txt_99_12"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp" />
</RelativeLayout>