<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:background="@drawable/shape_003"
    android:orientation="vertical">


    <com.zxy.jisuloan.view.widget.RoundShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:radius="6dp"
        app:shadowColor="@color/color_1a"
        app:shadowRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="24dp">

            <TextView
                style="@style/common_TextView_2"
                android:layout_marginTop="23dp"
                android:text="借款申请未通过" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="13dp"
                android:background="@color/bg_F4F4F4" />

            <TextView
                style="@style/common_TextView2_3"
                android:gravity="center|left"
                android:lineSpacingExtra="3dp"
                android:minHeight="63dp"
                android:text="亲爱的张三，您向桃花申请的借款未通过，请保持良好的信用习惯。" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_F4F4F4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <TextView
                    style="@style/common_TextView3_2"
                    android:text="查看详情" />

                <TextView
                    style="@style/common_TextView3_2"
                    android:layout_alignParentRight="true"
                    android:text="2019-07-05 21：50" />
            </RelativeLayout>
        </LinearLayout>
    </com.zxy.jisuloan.view.widget.RoundShadowLayout>


</LinearLayout>