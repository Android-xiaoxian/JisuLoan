<?xml version="1.0" encoding="utf-8"?>
<com.zxy.jisuloan.view.widget.RoundShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:radius="6dp"
    app:shadowColor="@color/color_1a"
    app:shadowRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@drawable/shape_003"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_product_logo"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/logo" />

                <TextView
                    android:id="@+id/tv_product_name"
                    style="@style/common_TextView"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:text="小赢卡贷"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_quota"
                    style="@style/common_TextView4"
                    android:text="14000" />

                <TextView
                    style="@style/common_TextView3"
                    android:text="最高额度元" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_check_detail"
                android:layout_width="66dp"
                android:layout_height="25dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/shape_004"
                android:text="查看详情"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_status"
                style="@style/common_TextView3"
                android:layout_marginTop="10dp"
                android:text="审批处理中"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</com.zxy.jisuloan.view.widget.RoundShadowLayout>