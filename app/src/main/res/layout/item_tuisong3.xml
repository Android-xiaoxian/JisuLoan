<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="147dp"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/logo" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/txt_product_name"
                style="@style/common_TextView"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:text="小赢卡贷" />

            <TextView
                android:id="@+id/tv_apply_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|right"
                android:text="971.0万人申请"
                android:textColor="@color/text_99"
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_fangKuan"
                style="@style/common_TextView4"
                android:text="14000" />

            <TextView
                style="@style/common_TextView3"
                android:layout_marginTop="3dp"
                android:text="平均放款金额" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/common_TextView3"
                    android:text="综合年利率：" />

                <TextView
                    android:id="@+id/txt_liLu"
                    style="@style/common_TextView_1"
                    android:text="35.99%" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/common_TextView3"
                    android:text="借款期限：" />

                <TextView
                    android:id="@+id/txt_qiXian"
                    style="@style/common_TextView_1"
                    android:text="3-12个月" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1.5" />

        <TextView
            android:id="@+id/btn_oneKey_apply"
            android:layout_width="66dp"
            android:layout_height="25dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/shape_004"
            android:gravity="center"
            android:text="一键申请"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_012"
        android:paddingStart="15dp">

        <TextView
            style="@style/common_TextView3_2"
            android:layout_centerVertical="true"
            android:text="最近一周申请top3" />
    </RelativeLayout>


</LinearLayout>